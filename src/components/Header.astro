---
import HeaderLink from "./HeaderLink.astro";
import ThemeToggle from "./ThemeToggle";
---

<header>
  <a
    class="unset absolute z-10 left-[50%] -top-[100rem] translate-x-[-50%] bg-white text-black px-8 py-2 focus:top-[initial]"
    href="#main"
  >
    Skip to content
  </a>
  <nav>
    <section class="text-text-bold flex items-center gap-2 sm:gap-4">
      <a href="/" class="unset flex-shrink-0">
        <img src="/images/Site_Logo.png" alt="Site Logo" class="h-10 sm:h-16 w-auto" width="64" height="64" />
      </a>
      <ul class="unset flex gap-2 sm:gap-4 [&>li]:p-0 text-sm sm:text-base">
        <li><HeaderLink href="/">Home</HeaderLink></li>
        <li><HeaderLink href="/blog">Blog</HeaderLink></li>
        <li><HeaderLink href="/projects">Projects</HeaderLink></li>
      </ul>
    </section>
  </nav>
  <div
    class="header-icons hidden sm:flex justify-self-end py-2 items-center content-center"
  >
    <a
      class="unset icon-link ml-4"
      href="https://github.com/nottrav"
      target="_blank"
      rel="noopener noreferrer"
    >
      <i
        class="fa-brands fa-github"
        aria-hidden="true"
        title="Travis McGhee on GitHub"></i>
      <span class="sr-only">Travis McGhee on GitHub</span>
    </a>
    <a
      class="unset icon-link ml-4"
      href="https://www.linkedin.com/in/travismcghee/"
      target="_blank"
      rel="noopener noreferrer"
    >
      <i
        class="fa-brands fa-linkedin"
        aria-hidden="true"
        title="Travis McGhee on LinkedIn"></i>
      <span class="sr-only">Travis McGhee on LinkedIn</span>
    </a>
  </div>
  <ThemeToggle client:load />
</header>
<style>
  header {
    grid-area: header;
    display: grid;
    align-items: center;
    grid-template-columns: minmax(0, 1fr) minmax(0, max-content) minmax(
        0,
        max-content
      );
  }

  .header-icons .icon-link {
    color: rgb(var(--color-text-body));
    font-size: 1.1rem;
    line-height: 1;
  }

  .header-icons .icon-link:hover {
    color: rgb(var(--color-text-link));
  }

  :global(.dark) .header-icons .icon-link {
    color: rgb(var(--color-text-body));
  }

  :global(.dark) .header-icons .icon-link:hover {
    color: rgb(var(--color-text-link));
  }
</style>
