---
import { getCollection } from "astro:content";
import PageLayout from "@layouts/PageLayout.astro";
import Container from "@components/Container.astro";
import ArrowCard from "@components/ArrowCard.astro";
import Link from "@components/Link.astro";
import { tagToSlug } from "@lib/utils";

export async function getStaticPaths() {
  const posts = (await getCollection("blog")).filter((post) => !post.data.draft);

  const tagMap = new Map<string, string>();
  posts.forEach((post) => {
    post.data.tags?.forEach((tag) => {
      const slug = tagToSlug(tag);
      if (!tagMap.has(slug)) {
        tagMap.set(slug, tag);
      }
    });
  });

  return Array.from(tagMap.entries()).map(([slug, tagLabel]) => ({
    params: { tag: slug },
    props: { tagLabel },
  }));
}

const { tagLabel } = Astro.props;
const tagSlug = Astro.params.tag;

const posts = (await getCollection("blog"))
  .filter((post) => !post.data.draft)
  .filter((post) => post.data.tags?.some((tag) => tagToSlug(tag) === tagSlug))
  .sort((a, b) => b.data.date.valueOf() - a.data.date.valueOf());
---

<PageLayout title={`Tag: ${tagLabel}`} description={`Blog posts tagged ${tagLabel}`}>
  <Container>
    <div class="space-y-8">
      <div class="animate flex items-center justify-between gap-2">
        <h1 class="font-semibold text-black dark:text-white">Tag: {tagLabel}</h1>
        <Link href="/blog">Back to blog</Link>
      </div>
      <ul class="animate flex flex-col gap-4">
        {posts.map((post) => (
          <li>
            <ArrowCard entry={post} />
          </li>
        ))}
      </ul>
      {posts.length === 0 && (
        <p class="animate text-sm opacity-75">
          No blog posts are tagged with this label yet.
        </p>
      )}
    </div>
  </Container>
</PageLayout>
