---
import { type CollectionEntry, getCollection } from "astro:content";
import PageLayout from "@layouts/PageLayout.astro";
import Container from "@components/Container.astro";
import FormattedDate from "@components/FormattedDate.astro";
import { getDisplayTags, readingTime, tagToSlug } from "@lib/utils";
import BackToPrev from "@components/BackToPrev.astro";

export async function getStaticPaths() {
  const posts = (await getCollection("blog"))
    .filter(post => !post.data.draft)
    .sort((a, b) => b.data.date.valueOf() - a.data.date.valueOf());
  return posts.map((post) => ({
    params: { slug: post.slug },
    props: post,
  }));
}
type Props = CollectionEntry<"blog">;

const post = Astro.props;
const { Content } = await post.render();
const tags = getDisplayTags(post.data.tags, 2);
---

<PageLayout title={post.data.title} description={post.data.description}>
  <Container>
    <div class="animate">
      <BackToPrev href="/blog">
        Back to blog
      </BackToPrev>
    </div>
    <div class="space-y-1 my-10">
      <div class="animate flex items-center gap-1.5">
        <div class="font-base text-sm">
          <FormattedDate date={post.data.date} />
        </div>
        &bull;
        <div class="font-base text-sm">
          {readingTime(post.body)}
        </div>
      </div>
      <div class="animate text-2xl font-semibold text-black dark:text-white">
        {post.data.title}
      </div>
      {(tags.length > 0 || post.data.series) && (
        <div class="animate flex flex-wrap items-center gap-2 pt-2">
          {post.data.series && (
            <span class="text-xs rounded-md px-2 py-1 border border-black/15 dark:border-white/20">
              {post.data.series.name} Â· Part {post.data.series.order}
            </span>
          )}
          {tags.map((tag) => (
            <a
              href={`/blog/tag/${tagToSlug(tag)}`}
              class="no-underline text-xs rounded-md px-2 py-1 border border-black/15 dark:border-white/20 hover:border-black/30 dark:hover:border-white/40 hover:text-black dark:hover:text-white transition-colors"
            >
              {tag}
            </a>
          ))}
        </div>
      )}
    </div>
    <article class="animate">
      <Content />
    </article>
  </Container>
</PageLayout>
