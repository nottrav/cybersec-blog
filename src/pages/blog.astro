---
import { readAll } from "../lib/markdoc/read";
import { blog } from "../lib/markdoc/frontmatter.schema";
import PageLayout from "../layouts/PageLayout.astro";
import PageMeta from "../components/PageMeta.astro";
import { SITE_TITLE } from "../config";

const posts = await readAll({
  directory: "blog",
  frontmatterSchema: blog,
});

const sortedPosts = posts
  .filter((p) => p.frontmatter.draft !== true)
  .sort(
    (a, b) =>
      new Date(b.frontmatter.date).valueOf() -
      new Date(a.frontmatter.date).valueOf()
  );

// Get all unique tags
const allTags = new Set<string>();
posts.forEach((post) => {
  if (post.frontmatter.tags) {
    post.frontmatter.tags.forEach((tag: string) => allTags.add(tag));
  }
});
const sortedTags = Array.from(allTags).sort();
---

<PageLayout>
  <PageMeta title={`Blog | ${SITE_TITLE}`} slot="meta" />
  <section slot="main">
    <!-- Tag Filter -->
    {sortedTags.length > 0 && (
      <div class="mb-8">
        <label for="tag-filter" class="block text-lg font-semibold mb-3">Filter by tag:</label>
        <select
          id="tag-filter"
          class="bg-bg-body border border-accent text-text rounded px-4 py-2 text-sm focus:outline-none focus:ring-2 focus:ring-accent"
          onchange="window.location.href = this.value"
        >
          <option value="/blog">All posts</option>
          {sortedTags.map((tag) => (
            <option value={`/blog/tag/${tag.toLowerCase().replace(/\s+/g, '-')}`}>
              {tag}
            </option>
          ))}
        </select>
      </div>
    )}

    <ul>
      {
        sortedPosts.map((post) => {
          const formattedDate = new Date(
            post.frontmatter.date
          ).toLocaleDateString("en-us", {
            year: "numeric",
            month: "short",
            day: "numeric",
          });
          return (
            <li class="grid grid-cols-[1fr] md:grid-cols-[1fr_auto] mb-3 md:gap-2 items-start">
              <div class="title">
                {post.frontmatter.external ? (
                  <a
                    href={post.frontmatter.url}
                    target="_blank"
                    class="blog-link unset hover:text-text-link"
                  >
                    <span>{post.frontmatter.title}</span>
                    <span>
                      <i class="ml-1 mr-1 text-[12px] pb-2 fa-solid fa-up-right-from-square pt-1" />
                    </span>
                  </a>
                ) : (
                  <a
                    href={`/blog/${post.slug}`}
                    class="blog-link unset hover:text-text-link"
                  >
                    {post.frontmatter.title}
                  </a>
                )}
              </div>
              <div class="text-text-muted text-sm italic">
                <time datetime={post.frontmatter.date.toISOString()}>
                  {formattedDate}
                </time>
              </div>
            </li>
          );
        })
      }
    </ul>
  </section>
</PageLayout>

<style>
  .blog-link {
    position: relative;
    display: inline-block;
  }
  .blog-link::after {
    content: '';
    position: absolute;
    width: 0;
    height: 2px;
    bottom: 0;
    left: 0;
    background-color: rgb(var(--color-text-link));
    transition: width 0.3s ease-in-out;
  }
  .blog-link:hover::after {
    width: 100%;
  }
</style>
