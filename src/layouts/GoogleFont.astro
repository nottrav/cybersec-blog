---
/*
  Self-hosted Geist fonts for compatibility with Zen & Safari-iOS
*/
---

<!-- Preload Regular weights for better performance -->
<link rel="preload" href="/fonts/geist/Geist-Regular.woff2" as="font" type="font/woff2" crossorigin>
<link rel="preload" href="/fonts/geist/GeistMono-Regular.woff2" as="font" type="font/woff2" crossorigin>

<style is:global>
  /* GeistWeb Sans - Self-hosted */
  @font-face {
    font-family: 'GeistWeb';
    font-style: normal;
    font-display: swap;
    font-weight: 400;
    src: url('/fonts/geist/Geist-Regular.woff2') format('woff2');
  }
  
  @font-face {
    font-family: 'GeistWeb';
    font-style: normal;
    font-display: swap;
    font-weight: 500;
    src: url('/fonts/geist/Geist-Medium.woff2') format('woff2');
  }
  
  @font-face {
    font-family: 'GeistWeb';
    font-style: normal;
    font-display: swap;
    font-weight: 700;
    src: url('/fonts/geist/Geist-Bold.woff2') format('woff2');
  }

  /* GeistMonoWeb - Self-hosted */
  @font-face {
    font-family: 'GeistMonoWeb';
    font-style: normal;
    font-display: swap;
    font-weight: 400;
    src: url('/fonts/geist/GeistMono-Regular.woff2') format('woff2');
  }
  
  @font-face {
    font-family: 'GeistMonoWeb';
    font-style: normal;
    font-display: swap;
    font-weight: 500;
    src: url('/fonts/geist/GeistMono-Medium.woff2') format('woff2');
  }
  
  @font-face {
    font-family: 'GeistMonoWeb';
    font-style: normal;
    font-display: swap;
    font-weight: 700;
    src: url('/fonts/geist/GeistMono-Bold.woff2') format('woff2');
  }
</style>
